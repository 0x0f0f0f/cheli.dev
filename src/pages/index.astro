            <span><Description /></span>
          </BlurFade>
        </div>
        <BlurFade delay={BLUR_FADE_DELAY} client:load>
          <MainAvatar
            name={DATA.name}
            avatarUrl={DATA.avatarUrl}
            initials={DATA.initials}
            client:load
